@model PetClinic.Web.InputModels.ReportsForm
@{
    ViewBag.Title = "Reports by Date";
}

<h2>@ViewBag.Title</h2>
<p>Choose date to view the reports.</p>

@using (Html.BeginForm("SearchPet", "Examinations", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.SearchDate)
                    @Html.TextBoxFor(model => model.SearchDate, new { @class = "form-control datepicker", placeholder = "Enter Drop-off date here..." })
                    @Html.ValidationMessageFor(model => model.SearchDate)
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-warning" style="margin-top:27px;margin-left:-85px;">
                        Search
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">

            @if (Model.ExaminationsResult != null && Model.ExaminationsResult.Count() >= 1)
            {
                foreach (var Examination in Model.ExaminationsResult)
                {
                    @Examination.Date
                }
            }
        </div>
    </div>
}
<script type="text/javascript">
    $(function () { // will trigger when the document is ready
        $('.datepicker').datepicker(); //Initialise any date pickers
    });
</script>