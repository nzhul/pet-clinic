@model PetClinic.Web.Models.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}
<div class="row" style="margin-top:20px;">
    <!-- Pets -->
    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Pets</h3>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-hover ">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Owner</th>
                        </tr>
                    </thead>
                    <tbody>
                        @Html.Partial("Home/_Pets", Model.Pets)
                    </tbody>
                </table>
                @Html.ActionLink("Add new pet", "Create", "Pets", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    <!--Pets end-->
    <!-- Owners -->
    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Owners</h3>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-hover ">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Pets Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        @Html.Partial("Home/_Owners", Model.Owners)
                    </tbody>
                </table>
                @Html.ActionLink("Add new owner", "Create", "Owners", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    <!-- Owners end-->
    <!-- Examinations  -->
    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Examinations</h3>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-hover ">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Owner</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>Пухчо</td>
                            <td>Dog</td>
                            <td>Atanas</td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>Грухчо</td>
                            <td>Pig</td>
                            <td>Vasil</td>
                        </tr>
                        <tr class="info">
                            <td>3</td>
                            <td>Буфтичка</td>
                            <td>Sheep</td>
                            <td>Trendafil</td>
                        </tr>
                    </tbody>
                </table>
                @Html.ActionLink("Add new examination", "Create", "Examinations", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    <!-- Examinations  end-->
</div>
<hr />
<div class="row">
    <div class="col-md-12 text-center">
        @Html.ActionLink("View All Reports", "Index", "Reports", null, new { @class = "btn btn-primary" })
    </div>
</div>