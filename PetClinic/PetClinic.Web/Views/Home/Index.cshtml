@model PetClinic.Web.Models.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}
<div class="row" style="margin-top:20px;">
    <!-- Pets -->
    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Pets</h3>
            </div>
            <div class="panel-body">
                @if (Model.Pets.Count() >= 1)
                {
                    <table class="table table-striped table-hover ">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Owner</th>
                            </tr>
                        </thead>
                        <tbody>
                            @Html.Partial("Home/_Pets", Model.Pets)
                        </tbody>
                    </table>
                }
                else
                {
                    <p>-- No Registered Pets --</p>
                }
                @Html.ActionLink("Add new pet", "Create", "Pets", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    <!--Pets end-->
    <!-- Owners -->
    <div class="col-md-3">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Owners</h3>
            </div>
            <div class="panel-body">
                @if (Model.Owners.Count() >= 1)
                {
                    <table class="table table-striped table-hover ">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Pets Count</th>
                            </tr>
                        </thead>
                        <tbody>
                            @Html.Partial("Home/_Owners", Model.Owners)
                        </tbody>
                    </table>
                }
                else
                {
                    <p>-- No Registered Owners --</p>
                }
                @Html.ActionLink("Add new owner", "Create", "Owners", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    <!-- Owners end-->
    <!-- Examinations  -->
    <div class="col-md-5">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Examinations</h3>
            </div>
            <div class="panel-body">
                @if (Model.Examinations.Count() >= 1)
                {
                    <table class="table table-striped table-hover ">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Pet</th>
                                <th>Breed</th>
                                <th>Owner</th>
                            </tr>
                        </thead>
                        <tbody>
                            @Html.Partial("Home/_Examinations", Model.Examinations)
                        </tbody>
                    </table>
                }
                else
                {
                    <p>-- No Registered Examinations --</p>
                }
                @Html.ActionLink("Add new examination", "SearchPet", "Examinations", null, new { @class = "btn btn-primary" })
                @Html.ActionLink("Reports", "Reports", "Examinations", null, new { @class = "btn btn-warning pull-right" })
            </div>
        </div>
    </div>
    <!-- Examinations  end-->
</div>