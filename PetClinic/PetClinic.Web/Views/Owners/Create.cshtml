@model PetClinic.Web.InputModels.CreateOwnerForm
@{
    ViewBag.Title = "Create Owner";
}

@using (Html.BeginForm("Create", "Owners", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <h2 class="main-heading text-center">
        @ViewBag.Title <br />
    </h2>
    <hr />
    <section class="registration-area">
        <div class="row">

            <div class="col-sm-12">
                <div class="panel panel-smart">
                    <div class="panel-heading">
                        <p style="color:red;">@Html.ValidationMessage("ServerError")</p>
                    </div>
                    <div class="panel-body">
                        <form class="form-horizontal" role="form">
                            <div class="form-group">
                                <div class="col-sm-12">
                                    @Html.LabelFor(model => model.Name, new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.Name)
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Eg: Ivan Ivanov" } })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-warning">
                                        Create
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
}